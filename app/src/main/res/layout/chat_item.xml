<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/chat_cardView"
        android:layout_width="400dp"
        android:layout_height="154dp"
        android:background="@drawable/chat_item_border"
        app:cardBackgroundColor="#F3F6FF"
        app:cardCornerRadius="30dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/chat_profile_pic" />

        <TextView
            android:id="@+id/nume_utilizator_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Dragu Daniel"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/last_message_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="38dp"
            android:fontFamily="@font/poppins_regulart"
            android:text="Te rog sa dai submit la test!"
            android:textColor="@color/gray"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/hour_of_last_message_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="144dp"
            android:layout_marginTop="86dp"
            android:fontFamily="@font/poppins_medium"
            android:text="12:10"
            android:textColor="@color/gray"
            android:textSize="12dp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>