<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/test_evalution_cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_item_border"
        app:cardBackgroundColor="#F3F6FF"
        app:cardCornerRadius="30dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nume_utilizator_test_evalution_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Dragu Daniel"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <Button
            android:id="@+id/download_test_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/blue_objects"
            android:backgroundTintMode="add"
            android:drawableLeft="@drawable/upload_logo"
            android:fontFamily="@font/poppins_semibold"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Download test"
            android:textAllCaps="false"
            android:textSize="12dp"
            android:textStyle="normal"
            app:cornerRadius="10dp"
            app:iconTint="#FFFFFF" />

        <EditText
            android:id="@+id/nota_test_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/edit_text_border"
            android:ems="12"
            android:fontFamily="@font/poppins_light"
            android:hint="Introduceti numarul de puncte"
            android:minHeight="46dp"
            android:inputType="numberDecimal"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:textAlignment="textStart"
            android:textColor="#9A000000"
            android:textSize="12dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/trimite_nota_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="160dp"
            android:backgroundTint="@color/blue_objects"
            android:backgroundTintMode="add"
            android:fontFamily="@font/poppins_semibold"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Trimite punctaj"
            android:textAllCaps="false"
            android:textSize="12dp"
            android:textStyle="normal"
            app:cornerRadius="10dp"
            app:iconTint="#FFFFFF" />

        <CheckBox
            android:id="@+id/stare_evaluare_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="165dp"
            android:background="@drawable/checkexams_checkbox_shape"
            android:clickable="false"
            android:fontFamily="@font/poppins_semibold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Neevaluat!"
            android:textColor="@color/white"
            android:textSize="12dp" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>