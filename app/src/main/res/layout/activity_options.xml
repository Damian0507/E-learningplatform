<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeProfessor.OptionsActivity">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:src="@drawable/logo_pagina_cursuri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/option_back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/courses_button_shape"
        android:backgroundTint="@color/blue_objects"
        android:backgroundTintMode="add"
        android:paddingLeft="20dp"
        android:paddingBottom="8dp"
        app:icon="@drawable/arrow_left"
        app:iconGravity="textStart"
        app:iconTint="@color/blue_objects"
        app:iconTintMode="src_in"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/materie_options_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Procesare paralela si distribuita"
        android:textColor="@color/blue_objects"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/options_ad_course_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="36dp"
        android:backgroundTint="@color/blue_objects"
        android:backgroundTintMode="add"
        android:fontFamily="@font/poppins_semibold"
        android:paddingTop="8dp"
        android:text="Adaugă curs"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textStyle="normal"
        app:cornerRadius="10dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materie_options_textView" />

    <Button
        android:id="@+id/options_check_exams_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/blue_objects"
        android:backgroundTintMode="add"
        android:fontFamily="@font/poppins_semibold"
        android:paddingTop="8dp"
        android:text="Verifică examenele"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textStyle="normal"
        app:cornerRadius="10dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/options_ad_course_button"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="26dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>