<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/materii_cardView"
        android:layout_width="172dp"
        android:layout_height="210dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/materii_item_shape"
        android:backgroundTint="@color/blue_objects"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/materie_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/materii_item_shape"
            android:src="@drawable/ppsd_image" />

        <TextView
            android:id="@+id/nume_materie_textView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="128dp"
            android:fontFamily="@font/poppins_medium"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Procesare paralelă și distribuită"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12dp" />


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>